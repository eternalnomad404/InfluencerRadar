# Environment Configuration for Gemini AI Agent
# Copy this file to .env and fill in your actual API keys

# Required: Gemini AI Configuration (for Vite, use VITE_ prefix)
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Backup AI Configuration
VITE_OPENAI_API_KEY=your_openai_api_key_here

# Platform API Keys (for enhanced data collection)
YOUTUBE_API_KEY=your_youtube_api_key_here
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here

# AI Agent Settings
TREND_BRIEF_INTERVAL_HOURS=48
ALERT_THRESHOLDS_ENGAGEMENT_SPIKE=2.0
ALERT_THRESHOLDS_VIRAL_CONTENT=100000

# Email Notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_TO=team@yourbrand.com

# Development Settings
NODE_ENV=development
DEBUG_AI_AGENT=true
